<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<EditText
    android:maxLength="16"
                android:inputType="text"
    android:layout_marginTop="15dp"
    android:padding="10dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:id="@+id/txtdangnhap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Email/Số điện thoại/Tên đăng nhập"
    android:textSize="16sp"
    />
    <EditText
        android:maxLength="16"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:id="@+id/txtmatkhautaikhoan"
        android:elevation="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:hint="Mật Khẩu"
        android:layout_below="@+id/txtdangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>
    <LinearLayout
                         android:id="@+id/linnear"
        android:layout_below="@+id/txtmatkhautaikhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/btndangnhaptaikhoan"
            android:background="@android:color/holo_orange_dark"
            android:text="Đăng Nhập"
            android:textColor="@android:color/background_light"
            android:padding="2dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
 android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/txttrogiup"
            android:padding="3dp"
            android:textColor="@android:color/background_dark"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cần trợ giúp ?"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout

        android:orientation="vertical"
       android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="----------------Đăng nhập nhanh vơi---------------"
            android:gravity="center"/>

        <Button
            android:id="@+id/btndangnhapvoiemal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:text="Đăng Nhập Bằng SMS"
            android:textColor="@android:color/background_light"
            android:background="@android:color/holo_green_dark"/>

        <Button
            android:textColor="@android:color/background_light"
             android:paddingLeft="10dp"
            android:drawableLeft="@drawable/facebook"
            android:background="@drawable/custom_edit_fb"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiếp Tục Với FaceBook"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>
</RelativeLayout>