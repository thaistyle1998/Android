<?xml version="1.0" encoding="utf-8"?>
<ScrollView
     android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
       <fragment
                android:layout_margin="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/fragmentbanner"
           android:name="com.example.myapplication.Fragment_trangchu.fragment_banner"/>
        <fragment
           android:layout_margin="5dp"
            android:layout_below="@+id/fragmentbanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.myapplication.Fragment_ThuongMai.fragment_thuongmai"
            android:id="@+id/fragment"/>
          <fragment
android:layout_margin="5dp"
              android:layout_below="@+id/fragment"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/fragmentdetail"

              android:name="com.example.myapplication.Fragment.fragment_detail"/>
            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragmentimkiemphobien"
                android:layout_below="@id/fragmentdetail"
                android:layout_margin="5dp"
                android:name="com.example.myapplication.Fragment_ThuongMai.fragment_timkiem"/>

   <fragment
       android:id="@+id/fragmentdanhmuc"
       android:name="com.example.myapplication.Fragment_ThuongMai.fragment_danhmuc"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/fragmentimkiemphobien"
       android:layout_margin="5dp"
       />
<fragment
    android:name="com.example.myapplication.Fragment_ThuongMai.fragment_goiy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/fragmentdanhmuc"
    android:layout_marginTop="5dp"
    android:id="@+id/fragmentgoiy"/>
    </RelativeLayout>



</ScrollView>