<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorlayoyt">




       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="200dp">
           <ImageView
               android:scaleType="fitXY"
               android:id="@+id/imageviewbackground"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/star"/>
           <de.hdodenhof.circleimageview.CircleImageView

               android:padding="15dp"
               android:background="@drawable/draw_image_icon"
               android:layout_marginTop="5dp"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"
               android:id="@+id/imageviewicon"
               android:layout_width="90dp"
               android:layout_height="90dp"
               android:src="@drawable/checked" />
           <Button

               android:id="@+id/btnbackstack"
               android:padding="3dp"
               android:background="@drawable/left"
               android:layout_width="40dp"
               android:layout_height="40dp"
               />

       </RelativeLayout>





      <RelativeLayout
          android:background="@drawable/custom_draw_edit"
          android:id="@+id/relative"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
       <LinearLayout
           android:background="@drawable/custom_draw_edit"
           android:id="@+id/linnearlayout"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/txttentai"
               android:layout_marginLeft="10dp"
               android:textColor="@android:color/background_dark"
               android:textStyle="bold"

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="thaistyle"
               android:textSize="17sp"
               android:paddingLeft="2dp"
               />
           <TextView
               android:layout_marginBottom="3dp"
               android:layout_marginTop="3dp"
               android:text="thaistyle1998"
               android:layout_marginLeft="10dp"
               android:textColor="@android:color/background_dark"
               android:paddingLeft="2dp"
               android:id="@+id/txttendangnhap"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="13sp"/>
       </LinearLayout>

          <TextView
              android:id="@+id/txtthaydoimatkhau"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/linnearlayout"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"
              android:background="@drawable/custom_draw_edit"
              android:paddingLeft="2dp"
              android:text="Thay Đổi Mật Khẩu"
              android:textColor="@android:color/background_dark"
              android:textSize="17sp"
              android:textStyle="bold" />

          <LinearLayout
              android:layout_marginLeft="10dp"
              android:background="@drawable/custom_draw_edit"
              android:layout_marginTop="10dp"

            android:id="@+id/gioitinh"
             android:layout_below="@+id/txtthaydoimatkhau"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
              <TextView
                   android:id="@+id/txt"
                  android:layout_marginTop="10dp"

                  android:textSize="17sp"
                  android:textStyle="bold"
                  android:paddingLeft="2dp"
                  android:textColor="@android:color/background_dark"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Giới Tính"/>
              <TextView
                       android:id="@+id/txtgioitinh"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Chưa Cập Nhật"

                  android:textSize="17sp"
                  android:padding="2dp"/>


      </LinearLayout>
          <LinearLayout
              android:background="@drawable/custom_draw_edit"
              android:layout_marginTop="10dp"
              android:id="@+id/linearngaysinh"
              android:layout_marginLeft="10dp"

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/gioitinh"
              android:orientation="vertical">
              <TextView
       android:id="@+id/txtngaysinhclick"

                  android:layout_below="@+id/gioitinh"
                  android:layout_marginTop="5dp"
                  android:padding="2dp"
                  android:textColor="@android:color/background_dark"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Ngày Sinh"

                  android:textStyle="bold"
                  android:textSize="17sp"
                  />
              <TextView
                  android:textStyle="bold"
                  android:id="@+id/txtngaysinh"
                  android:padding="2dp"
                  android:textSize="13sp"
                  android:text="Chưa thiết lập"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  />
          </LinearLayout>
          <LinearLayout
              android:background="@drawable/custom_draw_edit"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="10dp"
              android:layout_below="@id/linearngaysinh"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <TextView
                  android:padding="2dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Điện Thoại"
                  android:textSize="17sp"
                  android:textStyle="bold"
                  android:textColor="@android:color/background_dark"/>

               <TextView

                   android:padding="2dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="0924087196"
                   android:textSize="13sp"
                        android:id="@+id/txtsodienthoai"/>
          </LinearLayout>
      </RelativeLayout>



</LinearLayout>