<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
android:elevation="10dp"
        android:id="@+id/txttiemkiemphobien"
        android:textSize="20sp"
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÌM KIẾM PHỔ BIẾN"
        android:background="@drawable/custom_draw_edit"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"/>
    <TextView
        android:id="@+id/txtxemthem"
        android:background="@drawable/custom_draw_edit"
        android:padding="5dp"
        android:textSize="16sp"
        android:elevation="10dp"
        android:text="Xem Thêm"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/load"/>
  <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerviewtimkiem"
      android:layout_marginTop="5dp"
      android:layout_below="@+id/txtxemthem"
      android:layout_width="match_parent"
      android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</RelativeLayout>