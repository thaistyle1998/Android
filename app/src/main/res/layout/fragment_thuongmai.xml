<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:weightSum="4">

        <Button
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:id="@+id/btnthuongmai"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_draw_edit"
            android:drawableTop="@drawable/devicess"
            android:gravity="center"
            android:text="Siêu Thị Điện Tử"
            android:textSize="10sp"
            android:padding="2dp" />

        <Button
            android:layout_margin="2dp"
            android:gravity="center"

            android:textStyle="bold"
            android:textSize="10sp"
            android:background="@drawable/custom_draw_edit"
            android:text="Celebrity Clup"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
           android:drawableTop="@drawable/stars"
            android:layout_toRightOf="@+id/btnthuongmai"
            />
        <Button
            android:layout_margin="2dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@drawable/custom_draw_edit"
            android:text=" Mã Giảm Giá"
          android:layout_weight="1"
            android:padding="2dp"

            android:drawableTop="@drawable/sl"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <Button
            android:layout_margin="2dp"
           android:padding="2dp"
            android:text="Phong Cách Giới Trẻ"
            android:textStyle="bold"
            android:textSize="10sp"
            android:background="@drawable/custom_draw_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ideas"/>
    </LinearLayout>

</LinearLayout>